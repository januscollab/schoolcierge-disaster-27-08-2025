# ==============================================================================
# Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control
# ==============================================================================

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=development
API_VERSION=v1
SERVICE_NAME=schoolcierge-api
LOG_LEVEL=debug
PORT=3000

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://schoolcierge_user:localdev123@localhost:5432/schoolcierge_dev
DATABASE_SSL=false

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_URL=redis://:localdev123@localhost:6379
REDIS_PASSWORD=localdev123

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Clerk Authentication
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
CLERK_WEBHOOK_SECRET=

# JWT Configuration
JWT_SECRET=development_secret_change_in_production_min_64_chars
JWT_REFRESH_SECRET=development_refresh_secret_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# WhatsApp via Whapi.Cloud
WHAPI_API_KEY=
WHAPI_BASE_URL=https://gate.whapi.cloud

# Email via Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# =============================================================================
# SECURITY
# =============================================================================
SESSION_SECRET=development_session_secret_change_in_production
COOKIE_SECRET=development_cookie_secret_change_in_production
CSRF_SECRET=development_csrf_secret_change_in_production

# =============================================================================
# URLS & CORS
# =============================================================================
API_BASE_URL=http://localhost:3000
WEB_APP_URL=http://localhost:3001
MOBILE_APP_SCHEME=schoolcierge

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# =============================================================================
# MONITORING (Optional for Development)
# =============================================================================
MONITORING_ENABLED=false
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development